<?xml version="1.0" encoding="utf-8"?>
<rule name="Choose poisoner">
    <actions>
        <assign>
            <players>
                <random amount="1">
                    <complement>
                        <has_type tag="Queen"/>
                        <has_type tag="Mafia"/>
                        <has_type tag="Sect"/>
                        <has_type tag="Collector"/>
                        <has_group name="Servitor"/>
                    </complement>
                </random>
            </players>
            <tags>
                <tag name="Poisoner"/>
                <tag name="Visited">
                    <tags>
                        <tag name="Market"/>
                    </tags>
                </tag>
            </tags>
        </assign>
    </actions>
</rule>