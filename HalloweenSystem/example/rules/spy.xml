<?xml version="1.0" encoding="utf-8"?>
<rule name="Choose spy">
    
    <requirements>
        <has_type tag="Army general"/>
    </requirements>
    
    <actions>
        <assign>
            <players>
                <random amount="1">
                    <intersect>
                        <has_type tag="Foreigner"/>
                        <complement>
                            <has_type tag="Army general"/>
                            <has_type tag="Princess"/>
                        </complement>
                    </intersect>
                </random>
            </players>
            <tags>
                <tag name="Spy"/>
            </tags>
        </assign>
    </actions>
</rule>