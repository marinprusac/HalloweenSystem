<?xml version="1.0" encoding="utf-8"?>
<rule name="Assign mafia">
    <actions>
        <assign>
            <players>
                <random amount="20%">
                    <complement>
                        <iterate name="tag" parameter_type="tag">
                            <parameter_selector>
                                <group_tag name="Alliance members"/>
                            </parameter_selector>
                            <iterable_selector>
                                <has_tag>
                                    <tags>
                                        <parameter name="tag"/>
                                    </tags>
                                </has_tag>
                            </iterable_selector>
                        </iterate>
                        <has_type tag="Queen"/>
                    </complement>
                </random>
            </players>
            <tags>
                <tag name="Mafia"/>
            </tags>
        </assign>

        <assign>
            <players>
                <random amount="1">
                    <intersect>
                        <has_type tag="Mafia"/>
                        <complement>
                            <has_type tag="Young"/>
                        </complement>
                    </intersect>
                </random>
            </players>
            <tags>
                <tag name="Godfather"/>
            </tags>
        </assign>

        <assign>
            <players>
                <chance probability="0.33">
                    <random amount="1">
                        <intersect>
                            <has_type tag="Mafia"/>
                            <complement>
                                <has_type tag="Godfather"/>
                            </complement>
                        </intersect>
                    </random>
                </chance>
            </players>
            <tags>
                <tag name="Snitch"/>
            </tags>
        </assign>
    </actions>
</rule>