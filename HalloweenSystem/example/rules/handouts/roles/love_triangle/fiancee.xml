<?xml version="1.0" encoding="utf-8"?>
<rule name="Fiancee handout">
    <actions>
        <handout>
            <players>
                <has_type tag="Fiancee"/>
            </players>
            <handouts>
                
                <join separator="newline">
                    <text text="👤 IDENTITY: The Fianceé 💍"/>
                    <text text="You are engaged to the princess!"/>
                    <text text="The queen gave you two her blessing and are about to soon be wed!"/>
                    <text text="But you have some burning doubts..."/>
                </join>

                <join separator="newline">
                    <text text="ℹ️ INFO: Princess' true identity"/>
                    <join>
                        <text text="You know who the princess is. It is "/>
                        <transform type="player">
                            <has_type tag="Princess"/>
                        </transform>
                        <text text="."/>
                    </join>
                    <text text="You might want to keep that information private."/>
                </join>

                <join separator="newline">
                    <text text="☑️ TASK: Eliminate the frog!"/>
                    <text text="You've heard some stories about the mythical princess' love affair."/>
                    <text text="You don't truly believe that she is being unfaithful, but in case she is, you definitely need to get rid of that fucked!"/>
                    <text text="Otherwise, you might lose your opportunity of becoming a future king."/>
                </join>

                <join separator="newline">
                    <text text="☑️ TASK: Keep the princess safe"/>
                    <text text="You are unhappy with the current situation of your engagement..."/>
                    <text text="It is still of utmost importance to keep her alive!"/>
                </join>
                
            </handouts>
        </handout>
    </actions>
</rule>