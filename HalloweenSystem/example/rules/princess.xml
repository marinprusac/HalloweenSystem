<?xml version="1.0" encoding="utf-8"?>
<rule name="Choose princess">
    <actions>
        <assign>
            <players>
                <random amount="1">
                    <complement>
                        <has_type tag="Queen"/>
                        <has_type tag="Vampire"/>
                        <has_type tag="Mafia"/>
                        <has_type tag="Old"/>
                    </complement>
                </random>
            </players>
            <tags>
                <tag name="Princess"/>
                <tag name="Visited">
                    <tags>
                        <tag name="Castle"/>
                    </tags>
                </tag>
            </tags>
        </assign>
    </actions>
</rule>