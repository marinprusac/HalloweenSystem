<?xml version="1.0" encoding="utf-8"?>
<rule name="Choose pen pal">
    <actions>
        <assign>
            <players>
                <random amount="1">
                    <complement>
                        <has_type tag="Queen"/>
                    </complement>
                </random>
            </players>
            <tags>
                <tag name="Pen pal"/>
            </tags>
        </assign>
    </actions>
</rule>