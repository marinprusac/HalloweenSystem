<?xml version="1.0" encoding="utf-8"?>
<rule name="Assign sect">
    
    <actions>
        <assign together="yes">
            <players>
                <random amount="3">
                    <complement>
                        <iterate name="tag" parameter_type="tag">
                            <parameter_selector>
                                <group_tag name="Alliance members"/>
                            </parameter_selector>
                            <iterable_selector>
                                <has_tag>
                                    <tags>
                                        <parameter name="tag"/>
                                    </tags>
                                </has_tag>
                            </iterable_selector>
                        </iterate>
                        <has_type tag="Queen"/>
                        <has_type tag="Archbishop"/>
                    </complement>
                </random>
            </players>
            
            <tags>
                <tag name="Sectarian"/>
                <tag name="Sect's business place">
                    <tags>
                        <random amount="1">
                            <intersect>
                                <group_tag name="Locations"/>
                                <complement>
                                    <tag name="Market"/>
                                    <tag name="Tavern"/>
                                    <tag name="Church"/>
                                </complement>
                            </intersect>
                        </random>
                    </tags>
                </tag>
            </tags>
        </assign>

        <assign>
            <players>
                <has_type tag="Sectarian"/>
            </players>
            <tags>
                <tag name="Visited">
                    <tags>
                        <from_player_extract_tag tag="Sect's business place">
                            <current_player/>
                        </from_player_extract_tag>
                    </tags>
                </tag>
            </tags>
        </assign>>
        
        <assign>
            <players>
                <random amount="1">
                    <intersect>
                        <has_type tag="Sectarian"/>
                        <complement>
                            <has_type tag="Loner"/>
                        </complement>
                    </intersect>
                </random>
            </players>
            
            <tags>
                <tag name="Sect leader"/>
            </tags>
        </assign>
        
    </actions>

</rule>