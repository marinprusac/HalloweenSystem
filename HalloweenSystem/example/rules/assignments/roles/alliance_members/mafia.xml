<?xml version="1.0" encoding="utf-8"?>
<rule name="Assign mafia">
    <actions>
        <assign> <!-- Mafia members -->
            <players>
                <random amount="3">
                    <complement>
                        <iterate name="tag" parameter_type="tag">
                            <parameter_selector>
                                <group_tag name="Alliance members"/>
                            </parameter_selector>
                            <iterable_selector>
                                <has_tag>
                                    <tags>
                                        <parameter name="tag"/>
                                    </tags>
                                </has_tag>
                            </iterable_selector>
                        </iterate>
                        <has_type tag="Queen"/>
                    </complement>
                </random>
            </players>
            <tags>
                <tag name="Mafia"/>
            </tags>
        </assign>
        
        <assign together="yes">
            <players>
                <has_type tag="Mafia"/>
            </players>
            <tags>
                <tag name="Mafia's business place">
                    <tags>
                        <random amount="1">
                            <intersect>
                                <group_tag name="Locations"/>
                                <complement>
                                    <tag name="Castle"/>
                                </complement>
                            </intersect>
                        </random>
                    </tags>
                </tag>
            </tags>
        </assign>
        
        <assign>
            <players>
                <has_type tag="Mafia"/>
            </players>
            <tags>
                <tag name="Visited">
                    <tags>
                        <from_player_extract_tag tag="Mafia's business place">
                            <current_player/>
                        </from_player_extract_tag>
                    </tags>
                </tag>
            </tags>
        </assign>

        <assign> <!-- Godfather -->
            <players>
                <random amount="1">
                    <intersect>
                        <has_type tag="Mafia"/>
                        <complement>
                            <has_type tag="Young"/>
                            <has_type tag="Loner"/>
                        </complement>
                    </intersect>
                </random>
            </players>
            <tags>
                <tag name="Godfather"/>
            </tags>
        </assign>

        <assign> <!-- Snitch -->
            <players>
                <chance probability="0.33">
                    <random amount="1">
                        <intersect>
                            <has_type tag="Mafia"/>
                            <complement>
                                <has_type tag="Godfather"/>
                            </complement>
                        </intersect>
                    </random>
                </chance>
            </players>
            <tags>
                <tag name="Snitch"/>
            </tags>
        </assign>
    </actions>
</rule>